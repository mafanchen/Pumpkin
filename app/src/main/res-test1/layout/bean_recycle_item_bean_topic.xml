<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/colorDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_topicName_topic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="@dimen/topic_margin_left_right"
        app:layout_constraintBottom_toBottomOf="@+id/tv_topicName_topic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_topicName_topic" />

    <TextView
        android:id="@+id/tv_topicName_topic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="9dp"
        android:paddingRight="@dimen/topic_margin_left_right"
        android:singleLine="true"
        android:textColor="@color/topic_font_topicName"
        android:textSize="@dimen/text_size_19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_topicName_topic"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <ImageView
        android:id="@+id/iv_topicPic_topic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topic_height_ad_pic"
        android:layout_marginTop="12dp"
        android:layerType="hardware"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/tv_topicName_topic" />

    <TextView
        android:id="@+id/tv_topicContent_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="2"
        android:paddingStart="@dimen/topic_margin_left_right"
        android:paddingTop="@dimen/topic_margin_content2Pic"
        android:paddingEnd="@dimen/topic_margin_left_right"
        android:paddingBottom="@dimen/topic_margin_content2bottom"
        android:textColor="@color/topic_font_topicContent"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintTop_toBottomOf="@+id/iv_topicPic_topic"
        tools:text="电影专题" />

</android.support.constraint.ConstraintLayout>