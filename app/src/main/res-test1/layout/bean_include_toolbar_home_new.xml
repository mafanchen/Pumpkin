<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/toolbar_background_homepage"
    android:gravity="center_vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <ImageButton
        android:id="@+id/ib_back_toolbar_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_nav_back"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/iv_history_toolbar_homepage"
        android:layout_toEndOf="@+id/ib_back_toolbar_homepage"
        android:background="@drawable/shape_search_toolbar_homepage"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/searchBar_padding"
        android:paddingEnd="@dimen/searchBar_padding">

        <TextView
            android:id="@+id/tv_searchBtn_toolbar_homepage"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textColor="@color/search_font_searchWord"
            android:textSize="@dimen/text_size_14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:background="#bebebe" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="13dp"
            android:layout_height="15dp"
            android:layout_marginStart="13dp"
            android:src="@drawable/ic_nav_search_yellow" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_history_toolbar_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toStartOf="@+id/iv_share_toolbar_homepage"
        android:src="@drawable/ic_home_history"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_share_toolbar_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_home_share"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_screen"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_bg_btn_screen"
        android:visibility="gone" />

</RelativeLayout>