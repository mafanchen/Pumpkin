<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="81dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_vip"
        style="@style/iv_swap_vip"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/tv_vip_name"
        style="@style/tv_swap_vip"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/iv_vip"
        android:includeFontPadding="false"
        tool:text="特权会员" />

    <TextView
        android:id="@+id/tv_count"
        style="@style/tv_swap_date"
        android:layout_below="@+id/tv_vip_name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/iv_vip"
        android:includeFontPadding="false"
        tool:text="邀请人数：3位" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/tv_swap_date"
        android:layout_alignTop="@+id/tv_count"
        android:layout_toEndOf="@+id/tv_count"
        android:includeFontPadding="false"
        tool:text="有效期：1个月" />


    <TextView
        android:id="@+id/btn_swap"
        style="@style/btn_swap_swap"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:enabled="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/swap_background" />
</RelativeLayout>
