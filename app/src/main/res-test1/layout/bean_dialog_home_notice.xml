<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/layout_notice"
        android:layout_width="@dimen/dialog_home_width"
        android:layout_height="@dimen/dialog_home_height"
        android:background="@drawable/bg_cm_home"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingTop="114dp"
        android:paddingEnd="15dp"
        android:paddingBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="bold"
            tools:text="公告" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingBottom="24dp"
            android:scrollbars="none"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_15sp"
            tools:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="120dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_bg_btn_home_dialog"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18sp"
            tools:text="确定" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close_home_dialog"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_close_home_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_notice" />

</android.support.constraint.ConstraintLayout>