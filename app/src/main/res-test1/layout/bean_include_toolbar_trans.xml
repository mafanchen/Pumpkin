<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="44dp"
	android:background="@color/transparent"
	android:orientation="horizontal"
	android:paddingStart="12dp"
	android:paddingEnd="12dp">

	<TextView
		android:id="@+id/tv_title_toolbar"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:gravity="center"
		android:paddingStart="@dimen/searchBar_padding"
		android:paddingEnd="@dimen/searchBar_padding"
		android:textColor="@color/colorWhite"
		android:textSize="@dimen/text_size_18sp"
		tools:text="标题" />

	<ImageButton
		android:id="@+id/ib_back_toolbar"
		android:layout_width="16dp"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:layout_marginEnd="16dp"
		android:background="@color/transparent"
		android:src="@drawable/ic_nav_back"
		android:visibility="gone" />

	<TextView
		android:id="@+id/tv_editBtn_toolbar"
		style="@style/title_toolbar.history"
		android:drawablePadding="6dp"
		android:text="@string/activity_history_edit"
		android:textColor="@color/colorWhite"
		android:visibility="gone" />
</FrameLayout>