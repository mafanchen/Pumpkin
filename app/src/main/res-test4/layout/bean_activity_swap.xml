<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/swap_background_title"
    android:orientation="vertical"
    tools:context=".module.swap.SwapActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/bean_include_toolbar_trans" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/swap_background_title"
        android:gravity="center"
        android:paddingTop="12dp"
        android:text="@string/activity_swap_title"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/swap_textSize_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_friend_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/swap_background_title"
        android:gravity="center"
        android:paddingTop="9dp"
        android:paddingBottom="12dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/swap_textSize_friend_count"
        android:textStyle="bold" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:background="@color/colorWhite"
        app:tl_indicator_color="@color/swap_tab_selected"
        app:tl_indicator_width="23dp"
        app:tl_textSelectColor="@color/swap_tab_selected"
        app:tl_textUnselectColor="@color/swap_tab_unselected"
        app:tl_textsize="@dimen/text_size_15sp" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2" />

</LinearLayout>