<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/videoPlayer_bg_transparent">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:text="@string/dialog_cancel"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_preview"
        android:layout_width="255dp"
        android:layout_height="143dp"
        android:layout_marginStart="59dp"
        android:background="@color/colorWhite"
        android:padding="3dp"
        android:src="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_share_wx"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="28dp"
        android:drawableTop="@drawable/ic_sh_wx"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:lines="1"
        android:text="@string/dialog_weixin"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_share_friends"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_share_friends"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_sh_py"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:lines="1"
        android:text="@string/dialog_friends"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_preview"
        app:layout_constraintTop_toTopOf="@+id/tv_share_wx" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:drawableTop="@drawable/ic_local_share"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:lines="1"
        android:text="@string/dialog_save_local"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_15sp"
        app:layout_constraintStart_toEndOf="@+id/tv_share_friends"
        app:layout_constraintTop_toTopOf="@+id/tv_share_wx" />

</android.support.constraint.ConstraintLayout>