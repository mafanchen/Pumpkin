<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:paddingBottom="9dp">

    <com.video.test.ui.widget.CornerImageView
        android:id="@+id/iv_recycle_item_pic_video"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:radius="20" />

    <com.video.test.ui.widget.CornerImageView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:src="@drawable/ic_shadow_cover"
        app:layout_constraintBottom_toBottomOf="@+id/iv_recycle_item_pic_video"
        app:radius="20" />

    <TextView
        android:id="@+id/tv_recycle_item_point_video"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/homepage_recycle_grade_around"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:singleLine="true"
        android:textColor="#ffad43"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_recycle_item_pic_video"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_recycle_item_videoName_video"
        style="@style/homepage_recycle_videoName"
        android:textColor="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_recycle_item_pic_video"
        tools:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测" />

</android.support.constraint.ConstraintLayout>