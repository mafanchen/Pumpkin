<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:src="@drawable/ic_loading_network_error" />

    <LinearLayout
        android:id="@+id/loading_solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="265dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_no_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络无连接，"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_13sp" />

        <TextView
            android:id="@+id/tv_solve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看解决方案"
            android:textColor="#ffad43"
            android:textSize="@dimen/text_size_13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/loading_retry"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="310dp"
        android:background="@drawable/shape_bg_loading_btn_retry"
        android:gravity="center"
        android:text="点击重试"
        android:textColor="#ffad43"
        android:textSize="@dimen/text_size_13sp" />


</FrameLayout>