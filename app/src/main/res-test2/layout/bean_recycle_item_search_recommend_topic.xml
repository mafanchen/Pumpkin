<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="72dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <ImageView
        android:id="@+id/iv_topic_bg"
        android:layout_width="128dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"
        tools:background="@color/colorBlack" />

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_topic_bg"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_15sp"
        android:textStyle="bold"
        tools:text="天坑动漫之有生完结系列" />

    <TextView
        android:id="@+id/tv_topic_video_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_topic_title"
        android:layout_alignBottom="@+id/iv_topic_bg"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/iv_topic_bg"
        android:textColor="#aaaaaa"
        android:textSize="@dimen/text_size_13sp"
        tools:text="20部影片" />

</RelativeLayout>
