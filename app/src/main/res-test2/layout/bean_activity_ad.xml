<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background">

    <ImageView
        android:id="@+id/iv_ad_splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/layout_skip"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/splash_margin_skip_right"
        android:layout_marginEnd="@dimen/splash_margin_skip_top"
        android:enabled="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_skip_splash"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_close"
            android:enabled="false"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>