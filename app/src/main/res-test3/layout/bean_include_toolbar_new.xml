<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="44dp"
	android:background="@color/toolbar_background_homepage"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/tv_title_toolbar"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:gravity="center"
		android:paddingStart="@dimen/searchBar_padding"
		android:paddingEnd="@dimen/searchBar_padding"
		android:textColor="@color/colorWhite"
		android:textSize="@dimen/text_size_18sp"
		tools:text="标题" />

	<ImageButton
		android:id="@+id/ib_back_toolbar"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:background="@color/transparent"
		android:paddingStart="12dp"
		android:paddingEnd="12dp"
		android:src="@drawable/ic_nav_back"
		android:visibility="gone" />

	<TextView
		android:id="@+id/tv_editBtn_toolbar"
		style="@style/title_toolbar.history"
		android:gravity="center_vertical"
		android:paddingStart="12dp"
		android:paddingEnd="12dp"
		android:text="@string/activity_history_edit"
		android:textColor="@color/history_font_btn_edit"
		android:visibility="gone" />

	<ImageView
		android:id="@+id/iv_search_toolbar"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="end|center_vertical"
		android:paddingStart="12dp"
		android:paddingEnd="12dp"
		android:src="@drawable/ic_search_nav"
		android:visibility="gone" />

</FrameLayout>