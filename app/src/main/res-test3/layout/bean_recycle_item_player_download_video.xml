<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cb_recycle_item_select"
    android:layout_width="match_parent"
    android:layout_height="@dimen/videoSelect_around_recycle_item"
    android:layout_marginLeft="@dimen/videoSelect_margin_recycle_item_left_right"
    android:layout_marginRight="@dimen/videoSelect_margin_recycle_item_left_right"
    android:layout_marginBottom="@dimen/videoSelect_margin_recycle_between_item">

    <TextView
        android:id="@+id/tv_name"
        style="@style/video_item_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="第1集" />

    <ImageView
        android:id="@+id/iv_download_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="6dp"
        tools:src="@drawable/ic_status_downloading" />

</FrameLayout>