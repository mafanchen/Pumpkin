<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="44dp">

	<TextView
		android:id="@+id/tv_recycle_item_deviceName"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginBottom="1dp"
		android:background="@color/colorWhite"
		android:drawableStart="@drawable/ic_vedio_showb"
		android:drawablePadding="14dp"
		android:gravity="center_vertical"
		android:paddingStart="10dp"
		android:paddingEnd="10dp"
		android:textColor="@color/dialog_castDialog_deviceName"
		android:textSize="@dimen/text_size_14sp"
		tools:text="测试设备名称测试设备名称" />

	<CheckedTextView
		android:id="@+id/ctv_recycle_item_deviceName"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="end"
		android:layout_marginEnd="10dp"
		android:checkMark="@drawable/selector_checkbox_cast"
		android:gravity="center_vertical" />


</FrameLayout>

